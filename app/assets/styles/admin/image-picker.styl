.image-picker
  .image-change
    display inline-block
    vertical-align middle

  .image-display
    vertical-align middle

#image-select
  width 80%
  margin -40% 0 0 -40%

  .modal-body
    img
      height 150px
      margin-right 5px
      float left
      border 1px solid transparent
    img:hover
      border-color rgba(82,168,236,0.8)
      outline 0
      outline thin dotted 9
      box-shadow:inset 0 1px 1px rgba(0,0,0,0.075),0 0 8px rgba(82,168,236,0.6)
